<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LogNewPeriodFragment">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        >

        <TextView
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_period"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_large"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/textColor"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/select_date_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_last_period_date"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_margin="@dimen/margin_small"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/round_calendar_month_24"
                android:inputType="none"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/roboto"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/period_days_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/day"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_margin="@dimen/margin_small"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_select_period_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableStart="@drawable/round_calendar_view_day_24"
                android:drawablePadding="@dimen/margin_small"
                android:fontFamily="@font/roboto"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/period_weeks_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/weeks"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_margin="@dimen/margin_small"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_select_period_weeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableStart="@drawable/round_view_week_24"
                android:drawablePadding="@dimen/margin_small"
                android:fontFamily="@font/roboto"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:paddingHorizontal="62dp"
            android:paddingVertical="16dp"
            android:text="@string/save"
            android:id="@+id/btn_save"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/background"
            app:backgroundTint="@color/textColor"
            android:textSize="@dimen/font_medium"
            />

    </LinearLayout>

</FrameLayout>