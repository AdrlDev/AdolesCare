<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/background"
    style="?attr/materialCardViewFilledStyle"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/buttonColor"
            android:paddingVertical="12dp"
            >

            <!-- Month Title -->
            <TextView
                android:id="@+id/tvMonthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="January"
                android:fontFamily="@font/roboto"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/buttonTextColor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/buttonTextColor"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/margin_large"
                />

            <!-- Weekday Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Repeat for 7 days -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/buttonTextColor"
                    android:gravity="center"
                    android:textSize="@dimen/font_small" />

                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="M" android:gravity="center" android:textSize="@dimen/font_small" />
                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" android:gravity="center" android:textSize="@dimen/font_small" />
                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="W" android:gravity="center" android:textSize="@dimen/font_small" />
                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" android:gravity="center" android:textSize="@dimen/font_small" />
                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" android:gravity="center" android:textSize="@dimen/font_small" />
                <TextView android:fontFamily="@font/roboto" android:textColor="@color/buttonTextColor" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" android:gravity="center" android:textSize="@dimen/font_small" />
            </LinearLayout>

        </LinearLayout>

        <!-- Days Grid -->
        <GridLayout
            android:background="@color/background"
            android:id="@+id/gridDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="6"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:alignmentMode="alignMargins" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>