<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="42sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:textColor="@color/textColor"
            />

        <TextView
            android:layout_marginVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_text_sign_up"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:textColor="@color/textColor"
            />

        <LinearLayout
            android:layout_marginBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp"
            android:weightSum="3"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:id="@+id/ll_f_name"
                android:hint="@string/first_name"
                android:layout_marginEnd="5dp"
                android:textColorHint="@color/textColor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:id="@+id/et_first_name"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_marginEnd="5dp"
                android:hint="@string/last_name"
                android:id="@+id/ll_l_name"
                android:textColorHint="@color/textColor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:id="@+id/et_last_name"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:hint="@string/mi"
                android:textColorHint="@color/textColor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:maxLength="2"
                    android:id="@+id/et_mi"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="9dp"
            android:weightSum="2"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:hint="@string/birthday"
                android:id="@+id/ll_b_day"
                android:layout_marginEnd="5dp"
                android:textColorHint="@color/textColor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:clickable="true"
                    android:longClickable="false"
                    android:drawableTint="@color/buttonColor"
                    android:drawableEnd="@drawable/round_calendar_month_24"
                    android:id="@+id/et_birthday"
                    tools:ignore="KeyboardInaccessibleWidget" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:hint="@string/age"
                android:textColorHint="@color/textColor"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:enabled="false"
                    android:id="@+id/et_age"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:id="@+id/ll_username"
            android:layout_marginVertical="9dp"
            android:textColorHint="@color/textColor"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor"
                android:id="@+id/et_username"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:layout_marginVertical="9dp"
            android:textColorHint="@color/textColor"
            app:endIconMode="password_toggle"
            android:id="@+id/ll_password"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor"
                android:inputType="textPassword"
                android:id="@+id/et_password"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:layout_marginVertical="9dp"
            android:textColorHint="@color/textColor"
            app:endIconMode="password_toggle"
            android:id="@+id/ll_confirm_password"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor"
                android:inputType="textPassword"
                android:id="@+id/et_confirm_password"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginVertical="9dp"
            android:layout_marginEnd="52dp"
            android:id="@+id/tv_term_of_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/term_of_use_text"
            android:textColor="@color/textColor"
            android:fontFamily="@font/roboto"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:textColorLink="@color/textColorLink"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:paddingVertical="16dp"
            app:backgroundTint="@color/buttonColor"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/btn_signup"/>

        <TextView
            android:id="@+id/tv_already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:textColor="@color/textColor"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:textColorLink="@color/textColorLink"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>