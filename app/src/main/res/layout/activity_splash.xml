<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/adoloscare_logo"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_splash_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:textStyle="italic"
        android:text="@string/splash_message"
        android:paddingHorizontal="42dp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:padding="42dp"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:paddingVertical="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/buttonTextColor"
            android:backgroundTint="@color/buttonColor"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/margin_large"
            >

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:dividerColor="@color/textColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="@color/textColor"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/font_small"
                android:layout_marginHorizontal="@dimen/margin_medium"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:dividerColor="@color/textColor"
                />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_text"
            android:textSize="14sp"
            android:paddingVertical="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/roboto"
            app:strokeColor="@color/buttonColor1"
            android:textColor="@color/buttonColor1"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            />

    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/buttonColor1"
        app:trackColor="@color/buttonColor"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="42dp"
        android:indeterminate="true" />

</androidx.constraintlayout.widget.ConstraintLayout>