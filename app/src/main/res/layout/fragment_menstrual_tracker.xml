<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenstrualTrackerFragment">

    <LinearLayout
        android:orientation="vertical"
        android:paddingHorizontal="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Greeting and Calendar Icon -->
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="22dp">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/tvGreeting"
                android:text="Good Day User!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/btnCalendar"
                android:src="@drawable/round_calendar_month_24"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Calendar"
                app:tint="@color/textColor" />
        </RelativeLayout>

        <!-- Date and Mini Calendar -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvToday"
            android:text="March 7"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <dev.adriele.calendarview.CustomHorizontalCalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/custom_calendar"
            tools:listitem="@layout/item_day"
            />

        <!-- Ovulation Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ovulation in"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginVertical="12dp"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/tv_ovulation_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remarks"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginVertical="12dp"
            android:textColor="@color/textColor"
            />

        <!-- Log Period Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:text="Log period"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@color/buttonTextColor"
            android:id="@+id/btn_log_period"
            />

    </LinearLayout>

</FrameLayout>