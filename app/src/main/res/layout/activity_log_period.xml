<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogPeriodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="18dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_new_24"
            app:tint="@color/textColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log period"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginHorizontal="16dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="12dp"
                style="?attr/materialCardViewFilledStyle"
                >

                <com.applandeo.materialcalendarview.CalendarView
                    android:id="@+id/calendarView"
                    app:eventsEnabled="true"
                    android:showDividers="none"
                    app:abbreviationsBarColor="@color/buttonColor"
                    app:abbreviationsLabelsColor="@color/buttonTextColor"
                    app:pagesColor="@color/background"
                    app:highlightedDaysLabelsColor="@color/buttonColor"
                    app:daysLabelsColor="@color/textColor"
                    app:selectionLabelColor="@color/buttonColor"
                    app:headerLabelColor="@color/buttonTextColor"
                    app:headerColor="@color/buttonColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_period_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit period dates"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:textColor="@color/buttonColor"
                app:strokeColor="@color/buttonColor"
                android:layout_marginVertical="18dp"
                style="?attr/materialButtonOutlinedStyle"
                />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="8dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shimmer_placeholder"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shimmer_placeholder"
                        />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_cycle_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginVertical="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date cycle"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_date_cycle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_remarks"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginVertical="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms and activities"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textColor"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>