<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LogPeriodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_new_20"
            app:tint="@color/buttonTextColor" />

        <TextView
            android:layout_toEndOf="@id/btn_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_period"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textColor="@color/buttonTextColor"
            android:layout_marginHorizontal="16dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:icon="@drawable/round_calendar_month_24"
            style="?attr/materialIconButtonOutlinedStyle"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp"
            app:iconTint="@color/buttonTextColor"
            app:strokeColor="@color/buttonTextColor"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                style="?attr/materialCardViewFilledStyle"
                >

                <com.applandeo.materialcalendarview.CalendarView
                    android:id="@+id/calendarView"
                    app:eventsEnabled="true"
                    android:showDividers="none"
                    app:abbreviationsBarColor="@color/buttonColor"
                    app:abbreviationsLabelsColor="@color/buttonTextColor"
                    app:pagesColor="@color/background"
                    app:highlightedDaysLabelsColor="@color/buttonColor"
                    app:daysLabelsColor="@color/textColor"
                    app:selectionLabelColor="@color/buttonColor"
                    app:headerLabelColor="@color/buttonTextColor"
                    app:headerColor="@color/buttonColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_period_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_period_dates"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:textColor="@color/buttonTextColor"
                android:backgroundTint="@color/buttonColor"
                android:layout_marginVertical="18dp"
                app:icon="@drawable/round_edit_calendar_20"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/buttonTextColor"
                style="?attr/materialButtonStyle"
                />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_direction="top_to_bottom"
                app:shimmer_repeat_mode="restart"
                app:shimmer_shape="linear"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1500"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginVertical="8dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shimmer_placeholder"
                        />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shimmer_placeholder"
                        />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_cycle_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginVertical="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date cycle"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_date_cycle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_remarks"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginVertical="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symptoms"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/textColor"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="8dp">

                <RelativeLayout
                    android:padding="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_weight_etc"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/textColor"
                        android:id="@+id/tv_hint"
                        android:gravity="center_vertical"
                        android:layout_alignTop="@id/btn_add"
                        android:layout_alignBottom="@id/btn_add"
                        android:layout_toStartOf="@id/btn_add"
                        android:layout_alignParentStart="true"
                        android:paddingEnd="8dp"
                        android:paddingStart="0dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonFilledStyle"
                        app:icon="@drawable/round_add_20"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/btn_add"
                        android:backgroundTint="@color/buttonColor"
                        app:iconTint="@color/buttonTextColor"
                        android:contentDescription="@string/app_name"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginVertical="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insight"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/textColor"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>